{
    "name": "game-ladder/leaderboard-service",
    "description": "Real-time player ladder system for online games",
    "type": "project",
    "require": {
        "php": "^8.3",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "predis/predis": "^2.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "GameLadder\\": "src/",
            "GameLadder\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GameLadder\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}

